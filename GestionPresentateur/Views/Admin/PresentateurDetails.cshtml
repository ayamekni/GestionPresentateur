@model Presentateur
@{
    ViewData["Title"] = "Détails du présentateur";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0"><i class="fas fa-info-circle me-2"></i>Détails du présentateur</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Code</dt>
                        <dd class="col-sm-8">@Model.CodeP</dd>

                        <dt class="col-sm-4">Nom</dt>
                        <dd class="col-sm-8">@Model.NomP</dd>

                        <dt class="col-sm-4">Rôle</dt>
                        <dd class="col-sm-8">@Model.Role?.Libelle</dd>

                        <dt class="col-sm-4">Prix du rôle</dt>
                        <dd class="col-sm-8">@Model.Role?.Prix.ToString("0.00") €</dd>

                        <dt class="col-sm-4">Nombre de numéros</dt>
                        <dd class="col-sm-8">@Model.Numeros?.Count() ?? 0</dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="EditPresentateur" asp-route-id="@Model.CodeP" class="btn btn-warning me-md-2">
                            <i class="fas fa-edit me-2"></i>Modifier
                        </a>
                        <a asp-action="Presentateurs" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Retour
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
