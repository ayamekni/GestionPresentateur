@model Presentateur
@{
    ViewData["Title"] = "Ajouter un présentateur";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="fas fa-plus me-2"></i>Ajouter un présentateur</h3>
                </div>
                <div class="card-body">
                    <form asp-action="CreatePresentateur" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="CodeP" class="form-control" placeholder="Code du présentateur" />
                            <label asp-for="CodeP">Code du présentateur</label>
                            <span asp-validation-for="CodeP" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="NomP" class="form-control" placeholder="Nom du présentateur" />
                            <label asp-for="NomP">Nom du présentateur</label>
                            <span asp-validation-for="NomP" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="CodeR" class="form-select">
                                <option value="">-- Sélectionner un rôle --</option>
                                @if (ViewBag.Roles != null)
                                {
                                    @foreach (var role in ViewBag.Roles)
                                    {
                                        <option value="@role.CodeR">@role.Libelle (@role.Prix.ToString("0.00")€)</option>
                                    }
                                }
                            </select>
                            <label asp-for="CodeR">Rôle</label>
                            <span asp-validation-for="CodeR" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Presentateurs" class="btn btn-secondary me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-2"></i>Enregistrer
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle me-2"></i>Information</h5>
                </div>
                <div class="card-body">
                    <p>Ajoutez un nouveau présentateur à votre cirque. Assurez-vous que :</p>
                    <ul>
                        <li>Le code du présentateur est unique</li>
                        <li>Un rôle approprié est sélectionné</li>
                        <li>Le nom est correctement orthographié</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}