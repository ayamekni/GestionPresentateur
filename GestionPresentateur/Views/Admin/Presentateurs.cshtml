@model IEnumerable<Presentateur>
@{
    ViewData["Title"] = "Gestion des présentateurs";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-users me-2"></i>Gestion des présentateurs</h1>
    <a asp-action="CreatePresentateur" class="btn btn-success">
        <i class="fas fa-plus me-2"></i>Ajouter un présentateur
    </a>
</div>

<div class="card shadow">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Code</th>
                            <th>Nom</th>
                            <th>Rôle</th>
                            <th>Prix du rôle</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var presentateur in Model)
                        {
                            <tr>
                                <td>@presentateur.CodeP</td>
                                <td>@presentateur.NomP</td>
                                <td>@presentateur.Role.Libelle</td>
                                <td>@presentateur.Role.Prix.ToString("0.00") €</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="PresentateurDetails" asp-route-id="@presentateur.CodeP" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="EditPresentateur" asp-route-id="@presentateur.CodeP" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="DeletePresentateur" asp-route-id="@presentateur.CodeP" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-3x mb-3"></i>
                <h4>Aucun présentateur trouvé</h4>
                <p>Commencez par ajouter un présentateur à votre cirque.</p>
                <a asp-action="CreatePresentateur" class="btn btn-success">
                    <i class="fas fa-plus me-2"></i>Ajouter le premier présentateur
                </a>
            </div>
        }
    </div>
</div>